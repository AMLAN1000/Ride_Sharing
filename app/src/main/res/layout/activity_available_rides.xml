<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FF"
    android:paddingTop="24dp"
    tools:context=".AvailableRidesActivity">

    <!-- Expanded Header Card with Wave Cutout -->
    <androidx.cardview.widget.CardView
        android:id="@+id/header_card"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="0dp"
        app:cardElevation="10dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 3D Effect Background -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Gradient Background -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/header_gradient" />

            <!-- Wavy Bottom Shape -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/wave_bottom_shape"
                android:scaleType="fitXY"
                android:alpha="0.1" />

            <!-- Wave Cutout Overlay -->
            <ImageView
                android:id="@+id/wave_cutout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-30dp"
                android:src="@drawable/wave_cutout_shape"
                android:scaleType="fitXY"
                app:tint="#FFFFFF" />

            <!-- Animated Car -->

            <!-- Header Info Section -->

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/car_animation"
                android:layout_width="250dp"
                android:layout_height="142dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="37dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/rides"
                app:lottie_speed="1.0" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AVAILABLE"
                    android:textColor="#8A6BC9"
                    android:textSize="18sp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rides_count_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Driver Rides"
                    android:textColor="#2D2D5B"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:letterSpacing="-0.03" />

                <TextView
                    android:id="@+id/subtitle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Find rides offered by drivers"
                    android:textColor="#6B5B8C"
                    android:textSize="13sp"
                    android:alpha="0.9" />

            </LinearLayout>

            <!-- Filter Button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/filter_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="24dp"
                android:src="@android:drawable/ic_menu_search"
                app:tint="@android:color/white"
                app:fabSize="mini"
                app:backgroundTint="#8A6BC9"
                app:elevation="6dp"
                android:contentDescription="Search rides" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!-- Search Filter Panel (Initially Hidden) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/search_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ” Filter Rides"
                android:textColor="#2D2D5B"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- From Location -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxStrokeColor="#8A6BC9"
                app:hintTextColor="#8A6BC9"
                app:startIconDrawable="@android:drawable/ic_menu_mylocation"
                app:startIconTint="#8A6BC9">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_from_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="From location"
                    android:textSize="15sp"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- To Location -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxStrokeColor="#8A6BC9"
                app:hintTextColor="#8A6BC9"
                app:startIconDrawable="@android:drawable/ic_dialog_map"
                app:startIconTint="#8A6BC9">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_to_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="To location"
                    android:textSize="15sp"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_cancel_search"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Cancel"
                    android:textColor="#8A6BC9"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:cornerRadius="16dp"
                    app:strokeColor="#8A6BC9"
                    app:strokeWidth="2dp"
                    app:backgroundTint="@android:color/transparent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_confirm_search"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Search"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:cornerRadius="16dp"
                    app:backgroundTint="#8A6BC9" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Active Filter Chip -->
    <com.google.android.material.chip.Chip
        android:id="@+id/chip_active_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="Filter active"
        android:visibility="gone"
        android:textColor="#8A6BC9"
        android:textStyle="bold"
        app:chipBackgroundColor="#F0E6FF"
        app:chipIcon="@android:drawable/ic_menu_search"
        app:chipIconTint="#8A6BC9"
        app:closeIconTint="#8A6BC9"
        app:closeIconVisible="true"
        app:chipCornerRadius="20dp"
        app:chipStrokeColor="#C5B3E6"
        app:chipStrokeWidth="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_panel" />

    <!-- Main Content Area -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="180dp"
        android:overScrollMode="never"
        android:fadingEdgeLength="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_include"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:visibility="gone"
                android:indeterminateTint="#8A6BC9" />

            <!-- RecyclerView for Rides -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rides_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingBottom="16dp" />

            <!-- Empty State Layout -->
            <LinearLayout
                android:id="@+id/empty_state_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:padding="40dp"
                android:layout_marginTop="80dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    app:lottie_rawRes="@raw/rides"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_speed="0.7"
                    android:alpha="0.6" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No Rides Available"
                    android:textColor="#2D2D5B"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="When drivers post ride offers, they will appear here for you to request."
                    android:textColor="#8A8AA3"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="ðŸ”„ Refresh"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="28dp"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    app:cornerRadius="16dp"
                    app:backgroundTint="#8A6BC9" />

            </LinearLayout>

        </FrameLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottom_navigation_include"
        layout="@layout/activity_layout_bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>