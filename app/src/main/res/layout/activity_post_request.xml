<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post a Ride Request"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Main Map Fragment -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="16dp">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Location Selection Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Locations"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="16dp" />

                <!-- Pickup Location -->
                <LinearLayout
                    android:id="@+id/pickup_location_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_mylocation"
                        android:layout_marginEnd="12dp"
                        app:tint="#4CAF50" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pickup Location"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_pickup_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tap to select pickup point on map"
                            android:textSize="16sp"
                            android:textColor="#212121"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_media_next"
                        android:layout_marginStart="8dp"
                        app:tint="#9E9E9E" />

                </LinearLayout>

                <!-- Drop Location -->
                <LinearLayout
                    android:id="@+id/drop_location_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_compass"
                        android:layout_marginEnd="12dp"
                        app:tint="#F44336" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Drop Location"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_drop_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tap to select drop point on map"
                            android:textSize="16sp"
                            android:textColor="#212121"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_media_next"
                        android:layout_marginStart="8dp"
                        app:tint="#9E9E9E" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Selected Route Preview -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_route_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Route Preview"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="12dp" />

                <!-- Distance and Duration -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@android:drawable/ic_menu_directions"
                            android:layout_marginEnd="8dp"
                            app:tint="#2196F3" />

                        <TextView
                            android:id="@+id/tv_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-- km"
                            android:textSize="14sp"
                            android:textColor="#757575" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@android:drawable/ic_lock_idle_alarm"
                            android:layout_marginEnd="8dp"
                            app:tint="#FF9800" />

                        <TextView
                            android:id="@+id/tv_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-- min"
                            android:textSize="14sp"
                            android:textColor="#757575" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Traffic Information -->
                <LinearLayout
                    android:id="@+id/layout_traffic_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#FFF3E0"
                    android:padding="8dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@android:drawable/stat_sys_warning"
                        android:layout_marginEnd="8dp"
                        app:tint="#FF9800" />

                    <TextView
                        android:id="@+id/tv_traffic_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Traffic: Normal"
                        android:textSize="12sp"
                        android:textColor="#FF9800" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Time Selection -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Departure Time"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:id="@+id/time_selection_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_lock_idle_alarm"
                        android:layout_marginEnd="12dp"
                        app:tint="#2196F3" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Select Departure Time"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_departure_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tap to select date &amp; time"
                            android:textSize="16sp"
                            android:textColor="#212121"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_media_next"
                        android:layout_marginStart="8dp"
                        app:tint="#9E9E9E" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Fare Input Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fare Amount"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="16dp" />

                <!-- Fare Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="outline"
                    android:background="@drawable/edittext_background"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:prefixText="BDT "
                    app:prefixTextColor="#212121"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_fare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter your proposed fare"
                        android:textSize="16sp"
                        android:inputType="numberDecimal"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Check Fare Button -->
                <Button
                    android:id="@+id/btn_check_fare"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Check Fare Fairness"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="#9E9E9E"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="12dp"
                    android:enabled="false"
                    app:cornerRadius="8dp" />

                <!-- Fare Analysis Result -->
                <LinearLayout
                    android:id="@+id/layout_fare_analysis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- Fair Fare Range -->
                    <TextView
                        android:id="@+id/tv_fair_range"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fair range: BDT 0 - BDT 0"
                        android:textSize="14sp"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="#E8F5E8"
                        android:layout_marginBottom="8dp" />

                    <!-- Fairness Message -->
                    <TextView
                        android:id="@+id/tv_fairness_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="#FFF3E0"
                        android:layout_marginBottom="8dp" />

                    <!-- Detailed Reason -->
                    <TextView
                        android:id="@+id/tv_detailed_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:padding="8dp"
                        android:background="#F5F5F5"
                        android:visibility="gone" />

                    <!-- Suggestion -->
                    <TextView
                        android:id="@+id/tv_suggestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="13sp"
                        android:textColor="#1976D2"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:background="#E3F2FD"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Additional Details -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Additional Details"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="16dp" />

                <!-- Passengers -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Number of Passengers"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <Button
                            android:id="@+id/btn_decrease_passengers"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="-"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:backgroundTint="#F5F5F5"
                            android:textColor="#212121"
                            app:cornerRadius="24dp" />

                        <TextView
                            android:id="@+id/tv_passengers_count"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:gravity="center" />

                        <Button
                            android:id="@+id/btn_increase_passengers"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="+"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:backgroundTint="#F5F5F5"
                            android:textColor="#212121"
                            app:cornerRadius="24dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Special Request -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Special Request (Optional)"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="outline"
                        android:background="@drawable/edittext_background"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_special_request"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:hint="Any special requirements? (e.g., luggage space, AC, etc.)"
                            android:textSize="14sp"
                            android:inputType="textMultiLine"
                            android:gravity="top"
                            android:maxLines="4" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#E3F2FD"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How Fare Fairness Works"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Real-time traffic analysis from Google Maps\n• Distance-based calculation\n• Time and day multipliers\n• Traffic condition adjustments\n• Passenger count consideration\n• Fair range: ±BDT 50 or 20% (whichever is higher)"
                    android:textSize="12sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Post Button -->
        <Button
            android:id="@+id/btn_post_request"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Post Ride Request"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#9E9E9E"
            android:textColor="#FFFFFF"
            android:enabled="false"
            app:cornerRadius="12dp" />

        <!-- Bottom Navigation Space -->
        <View
            android:layout_width="match_parent"
            android:layout_height="80dp" />

    </LinearLayout>

</ScrollView>