<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FF">

    <!-- Beautiful Header -->
    <androidx.cardview.widget.CardView
        android:id="@+id/header_card"
        android:layout_width="0dp"
        android:layout_height="160dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="0dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/header_gradient" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-30dp"
                android:src="@drawable/wave_cutout_shape"
                android:scaleType="fitXY"
                app:tint="#F8F9FF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POST REQUEST"
                    android:textColor="#8A6BC9"
                    android:textSize="16sp"
                    android:letterSpacing="0.2"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Find Your Ride"
                    android:textColor="#2D2D5B"
                    android:textSize="28sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="160dp"
        android:overScrollMode="never"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- MAP CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="16dp">

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.card.MaterialCardView>

            <!-- LOCATIONS CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Locations"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2D2D5B"
                        android:layout_marginBottom="16dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <fragment
                            android:id="@+id/autocomplete_pickup"
                            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </FrameLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="18dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="8dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <fragment
                            android:id="@+id/autocomplete_drop"
                            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </FrameLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ROUTE INFO CARD -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_route_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ›£ï¸ Route Info"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2D2D5B"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="#F8F9FF"
                            android:padding="16dp"
                            android:layout_marginEnd="8dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Distance"
                                android:textSize="12sp"
                                android:textColor="#8A8AA3"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tv_distance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#2D2D5B" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="#F8F9FF"
                            android:padding="16dp"
                            android:layout_marginStart="8dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Duration"
                                android:textSize="12sp"
                                android:textColor="#8A8AA3"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tv_duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#2D2D5B" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_traffic_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="#FFF3E0"
                        android:padding="12dp"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_traffic_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸš¦ Traffic: Normal"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#FF9800" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_weather_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="#E0F7FA"
                        android:padding="12dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_weather_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŒ¤ï¸ Weather: Loading..."
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#00BCD4" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- TIME CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â° Departure Time"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2D2D5B"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:id="@+id/time_selection_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#F8F9FF"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="When do you want to depart?"
                            android:textSize="12sp"
                            android:textColor="#8A8AA3"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_departure_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tap to select date &amp; time"
                            android:textSize="16sp"
                            android:textColor="#2D2D5B"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- VEHICLE CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸš— Vehicle Details"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2D2D5B"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vehicle Type"
                        android:textColor="#8A8AA3"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp" />

                    <RadioGroup
                        android:id="@+id/radio_group_vehicle_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">

                        <RadioButton
                            android:id="@+id/rb_car"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_radio_button"
                            android:button="@null"
                            android:checked="true"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="ðŸš— AC Car"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginEnd="8dp" />

                        <RadioButton
                            android:id="@+id/rb_bike"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_radio_button"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="ðŸï¸ Bike"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp" />

                    </RadioGroup>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number of Passengers"
                        android:textColor="#8A8AA3"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="#F8F9FF"
                        android:padding="12dp">

                        <Button
                            android:id="@+id/btn_decrease_passengers"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:text="âˆ’"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:backgroundTint="#6B8CFF"
                            android:textColor="#FFFFFF"
                            app:cornerRadius="25dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_passengers_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="#2D2D5B" />

                            <TextView
                                android:id="@+id/tv_passenger_note"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(Max 6 for AC Car)"
                                android:textSize="11sp"
                                android:textColor="#8A8AA3"
                                android:visibility="visible" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_increase_passengers"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:text="+"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:backgroundTint="#6B8CFF"
                            android:textColor="#FFFFFF"
                            app:cornerRadius="25dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Special Request (Optional)"
                        android:textColor="#8A8AA3"
                        android:textSize="14sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#F8F9FF"
                        app:boxStrokeColor="#6B8CFF"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusTopStart="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_special_request"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:hint="e.g., AC required, luggage space"
                            android:textSize="14sp"
                            android:inputType="textMultiLine"
                            android:gravity="top"
                            android:maxLines="4" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- FARE CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="100dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’° Fare Amount"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2D2D5B"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#F8F9FF"
                        app:boxStrokeColor="#6B8CFF"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:prefixText="à§³ "
                        app:prefixTextColor="#2D2D5B">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_fare"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter fare"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:padding="16dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btn_check_fare"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:backgroundTint="#9E9E9E"
                        android:enabled="false"
                        android:text="Validate Price"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="16dp" />

                    <LinearLayout
                        android:id="@+id/layout_fare_analysis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_fair_range"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:background="#E8F5E9"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="Fair range: à§³0 - à§³0"
                            android:textColor="#4CAF50"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_fairness_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:background="#FFF3E0"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text=""
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_detailed_reason"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#F5F5F5"
                            android:padding="12dp"
                            android:text=""
                            android:textColor="#757575"
                            android:textSize="12sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_suggestion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#E3F2FD"
                            android:padding="12dp"
                            android:text=""
                            android:textColor="#1976D2"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_post_request"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginTop="8dp"
                        android:text="ðŸš€ Post Ride Request"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:backgroundTint="#9E9E9E"
                        android:textColor="#FFFFFF"
                        android:enabled="false"
                        app:cornerRadius="16dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/activity_layout_bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>