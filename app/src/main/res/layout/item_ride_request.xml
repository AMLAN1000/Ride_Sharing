<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/card_background">

        <!-- Passenger Info Row -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Passenger Name and Type -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/passenger_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alice Johnson"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/passenger_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Rating and Fare -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:gravity="end">

                <TextView
                    android:id="@+id/rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.8"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:drawableStart="@android:drawable/btn_star_big_on"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/fare_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="à§³120"
                    android:textColor="@color/success_green"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </RelativeLayout>

        <!-- Route Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <!-- Source -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/presence_online"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/success_green" />

                <TextView
                    android:id="@+id/source_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="EWU Main Campus"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Destination -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/presence_busy"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/error_red" />

                <TextView
                    android:id="@+id/destination_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bashundhara City Mall"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Time and Passenger Count -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/time_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2:30 PM - 3:15 PM"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:drawableStart="@android:drawable/ic_menu_agenda"
                android:drawablePadding="4dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/passengers_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 passengers"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:drawableStart="@android:drawable/ic_menu_my_calendar"
                android:drawablePadding="4dp"
                android:gravity="center_vertical" />

        </LinearLayout>

        <!-- Special Request -->
        <TextView
            android:id="@+id/special_request_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Urgent: Exam tomorrow"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:background="@color/primary_blue_light"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:drawableStart="@android:drawable/ic_dialog_info"
            android:drawablePadding="4dp"
            android:gravity="center_vertical" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:weightSum="3">

            <Button
                android:id="@+id/accept_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Accept Request"
                android:textColor="@color/white"
                android:backgroundTint="@color/success_green"
                android:textAllCaps="false"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/profile_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:text="Profile"
                android:textColor="@color/text_primary"
                android:backgroundTint="@color/light_gray"
                android:textAllCaps="false"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/message_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:text="Message"
                android:textColor="@color/text_primary"
                android:backgroundTint="@color/light_gray"
                android:textAllCaps="false"
                android:layout_marginStart="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>