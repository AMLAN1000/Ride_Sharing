<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- App Title -->
    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/progress_container"
        android:layout_marginBottom="48dp"
        android:text="BroCar"
        android:textColor="#8F5FE6"
        android:textSize="32sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:fontFamily="sans-serif-medium" />

    <!-- Tagline -->
    <TextView
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/app_title"
        android:layout_marginTop="-40dp"
        android:text="Your journey starts here"
        android:textColor="#8957E2"
        android:textSize="14sp"
        android:textStyle="italic"
        android:alpha="0.8" />

    <!-- Progress Container -->
    <LinearLayout
        android:id="@+id/progress_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/loading_progress"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateTint="#9064DC" />

        <TextView
            android:id="@+id/loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Loading..."
            android:textColor="#8359CE"
            android:textSize="14sp"
            android:alpha="0.7" />

    </LinearLayout>

    <!-- Version Info -->
    <TextView
        android:id="@+id/version_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="Version 1.0"
        android:textColor="#895CD9"
        android:textSize="12sp"
        android:alpha="0.6" />

</RelativeLayout>