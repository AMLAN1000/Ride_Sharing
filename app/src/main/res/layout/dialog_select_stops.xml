<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Your Stops"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose where you'll get on and off"
        android:textSize="14sp"
        android:textColor="#757575"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="From (Pickup)"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinner_pickup_stop"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To (Drop-off)"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinner_drop_stop"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginVertical="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Distance:"
            android:textSize="14sp"
            android:textColor="#757575" />

        <TextView
            android:id="@+id/tv_selected_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-- km"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Your Fare:"
            android:textSize="14sp"
            android:textColor="#757575" />

        <TextView
            android:id="@+id/tv_selected_fare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="à§³--"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4CAF50" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm_stops"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Confirm and Join"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        app:cornerRadius="8dp" />

</LinearLayout>