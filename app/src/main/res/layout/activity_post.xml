<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FF"
    android:paddingTop="24dp"
    tools:context=".PostActivity">

    <!-- Expanded Header Card with Wave Cutout -->
    <androidx.cardview.widget.CardView
        android:id="@+id/header_card"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="0dp"
        app:cardElevation="10dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 3D Effect Background -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Gradient Background -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/header_gradient" />

            <!-- Wavy Bottom Shape -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/wave_bottom_shape"
                android:scaleType="fitXY"
                android:alpha="0.1" />

            <!-- Wave Cutout Overlay -->
            <ImageView
                android:id="@+id/wave_cutout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-30dp"
                android:src="@drawable/wave_cutout_shape"
                android:scaleType="fitXY"
                app:tint="#FFFFFF" />

            <!-- Animated Car -->

            <!-- User Info Section -->

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/car_animation"
                android:layout_width="246dp"
                android:layout_height="149dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="30dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/car1"
                app:lottie_speed="0.9" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/greeting_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WHAT TO POST?"
                    android:textColor="#8A6BC9"
                    android:textSize="20dp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/username_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="John"
                    android:textColor="#2D2D5B"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:letterSpacing="-0.03" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!-- Main Content Cards in Vertical Layout -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="200dp"
        android:overScrollMode="never"
        android:fadingEdgeLength="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Card 1: Post Request -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/post_request_card"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                android:stateListAnimator="@null">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <!-- Animation Container on LEFT -->
                    <FrameLayout
                        android:id="@+id/animation_container_request"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true">

                        <!-- Lottie Animation -->
                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/request_animation"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            app:lottie_rawRes="@raw/riderequest"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_speed="1.0"/>

                    </FrameLayout>

                    <!-- Text Content on RIGHT -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/animation_container_request"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:paddingStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Post a Request"
                            android:textColor="#2D2D5B"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Request a ride as passenger"
                            android:textColor="#8A8AA3"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Clickable Area -->
                    <View
                        android:id="@+id/btn_post_request"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?android:attr/selectableItemBackground" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card 2: Post Ride -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/post_ride_card"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                android:stateListAnimator="@null">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">

                    <!-- Animation Container on LEFT -->
                    <FrameLayout
                        android:id="@+id/animation_container_ride"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true">

                        <!-- Background circle for animation -->
                        <View
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="#E8F0FF"
                            android:alpha="0.3"
                            android:shape="oval" />

                        <!-- Ride Animation -->
                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/ride_animation"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            app:lottie_rawRes="@raw/rides"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_speed="1.0" />

                    </FrameLayout>

                    <!-- Text Content on RIGHT -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/animation_container_ride"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:paddingStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Post a Ride"
                            android:textColor="#2D2D5B"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Offer a ride as driver"
                            android:textColor="#8A8AA3"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Clickable Area -->
                    <View
                        android:id="@+id/btn_post_ride"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?android:attr/selectableItemBackground" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card 3: Post Carpool -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/post_carpool_card"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                android:stateListAnimator="@null">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">

                    <!-- Animation Container on LEFT -->
                    <FrameLayout
                        android:id="@+id/animation_container_carpool"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true">

                        <!-- Background circle for animation -->
                        <View
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="#FFEBF0"
                            android:alpha="0.3"
                            android:shape="oval" />

                        <!-- Carpool Animation -->
                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/carpool_animation"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            app:lottie_rawRes="@raw/peoplecar"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_speed="1.0" />

                    </FrameLayout>

                    <!-- Text Content on RIGHT -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/animation_container_carpool"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:paddingStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Post Carpool"
                            android:textColor="#2D2D5B"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Offer shared ride and split fare"
                            android:textColor="#8A8AA3"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Clickable Area -->
                    <View
                        android:id="@+id/btn_post_carpool"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?android:attr/selectableItemBackground" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/activity_layout_bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>